{
  "name": "despafacil-backend",
  "version": "1.0.0",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "seed": "ts-node prisma/seed.ts",
    "prisma:studio": "prisma studio",
    "prisma:generate": "prisma generate",
    "lint": "eslint . --ext .ts",
    "test": "vitest",
    "test:unit": "vitest run --dir test --coverage",
    "test:integration": "vitest run --dir test --reporter verbose",
    "test:security": "vitest run test/security.test.ts --reporter verbose",
    "test:db": "vitest run test/db.test.ts --reporter verbose",
    "test:all": "npm run build && npm run prisma:generate && npm run test",
    "test:load": "artillery run tests/load/login.yml -o reports/login.json && artillery run tests/load/motoristas.yml -o reports/motoristas.json && artillery run tests/load/upload.yml -o reports/upload.json && artillery run tests/load/register.yml -o reports/register.json",
    "test:stress": "autocannon -c 200 -d 30 http://localhost:4000/api/motoristas",
    "test:soak": "artillery run tests/load/soak-30m.yml -o reports/soak-30m.json",
    "report:load": "artillery report reports/login.json -o reports/login.html && artillery report reports/motoristas.json -o reports/motoristas.html && artillery report reports/upload.json -o reports/upload.html && artillery report reports/register.json -o reports/register.html",
    "cleanup:negados": "node scripts/cleanup-negados.js"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mjml": "^4.16.1",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "xlsx": "^0.18.5",
    "zod": "^3.23.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mjml": "^4.7.4",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.22",
    "@types/nodemailer": "^6.4.8",
    "@types/supertest": "^2.0.16",
    "@vitest/coverage-v8": "^2.1.9",
    "artillery": "^2.0.10",
    "autocannon": "^7.14.0",
    "c8": "^9.1.0",
    "eslint": "^8.49.0",
    "prettier": "^3.0.0",
    "prisma": "^5.11.1",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.6",
    "vitest": "^2.0.0"
  }
}
